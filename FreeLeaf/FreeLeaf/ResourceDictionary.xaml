        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>
    
    <Style x:Key="SimpleListViewItem" TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource GenericListViewItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListViewItem}">
                    <Border Name="Border" Background="Transparent">
                        <Grid>
                            <GridViewRowPresenter />
                            <Border BorderThickness="0,0,0,1" BorderBrush="#19000000" IsHitTestVisible="False" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="WhiteSmoke" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#e4715f" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MusicListViewItem" TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource GenericListViewItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListViewItem}">
                    <Border Name="Border" Background="Transparent">
                        <Grid>
                            <GridViewRowPresenter />
                            <Grid Name="Overlay" HorizontalAlignment="Left" Visibility="Collapsed" Background="#e4715f">
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource ToolbarButtonStyle}" Command="{Binding Play}">
                                        <Path Name="Path" Data="{StaticResource PlayPath}" Margin="5,0" Width="16" Stretch="Uniform" Fill="White" VerticalAlignment="Center" />
                                    </Button>
                                    <TextBlock Name="Text" Margin="5,0,10,0" Text="{Binding Path=Time, StringFormat=hh\\:mm\\:ss}" Foreground="White" FontSize="12" VerticalAlignment="Center" Visibility="Collapsed" />
                                </StackPanel>
                            </Grid>
                            <Rectangle Fill="#0C000000" HorizontalAlignment="Left" Width="{Binding VuValue}" IsHitTestVisible="False" />
                            <Border BorderThickness="0,0,0,1" BorderBrush="#19000000" IsHitTestVisible="False" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                            <Setter TargetName="Path" Property="Data" Value="{StaticResource PausePath}" />
                            <Setter TargetName="Text" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="WhiteSmoke" />
                            <Setter TargetName="Overlay" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#e4715f" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PictureListViewItem" TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource GenericListViewItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListViewItem}">
                    <Border Name="Border" Background="Transparent">
                        <Grid>
                            <GridViewRowPresenter VerticalAlignment="Center" />
                            <Grid Name="Overlay" HorizontalAlignment="Left" Visibility="Collapsed" Background="#FFE4715F">
                                <StackPanel Orientation="Horizontal">
                                    <Button IsEnabled="{Binding Path=IsLoading, Converter={StaticResource NegateBooleanConverter}}" Style="{StaticResource ToolbarButtonStyle}" Command="{Binding Preview}">
                                        <Path Name="Path" Data="{StaticResource ImagePath}" Margin="5,0" Width="16" Stretch="Uniform" Fill="White" VerticalAlignment="Center" />
                                    </Button>
                                    <TextBlock Name="Text" Margin="5,0,10,0" Foreground="White" FontSize="12" VerticalAlignment="Center" Visibility="Collapsed">
                                        <Run Text="{Binding Path=Progress, Mode=OneWay, StringFormat=\{0:0\}}" />%
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                            <Border BorderThickness="0,0,0,1" BorderBrush="#19000000" IsHitTestVisible="False" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter TargetName="Text" Property="Visibility" Value="Visible" />
                            <Setter TargetName="Overlay" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="WhiteSmoke" />
                            <Setter TargetName="Overlay" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#e4715f" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    
    
</ResourceDictionary>
