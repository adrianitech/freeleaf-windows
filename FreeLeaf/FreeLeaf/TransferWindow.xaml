<Window x:Class="FreeLeaf.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:model="clr-namespace:FreeLeaf.ViewModel"
        DataContext="{Binding Path=Transfer, Source={StaticResource Locator}}"
        Title="FreeLeaf - Transfer" Height="570" Width="960" MinHeight="570" MinWidth="960" WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow" FontFamily="Assets/#Segoe WP" UseLayoutRounding="True">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" UseAeroCaptionButtons="False" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Foreground" Value="#398328" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="#333333" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock Margin="20,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                <Run Text="{Binding Path=SelectedItem.Name, Mode=OneWay}" Foreground="#323232" FontSize="14" /><LineBreak />
                <Span Foreground="#4b4b4b" FontSize="10">
                    BATTERY: <Run Text="{Binding Path=SelectedItem.Battery, Mode=OneWay}" />
                    FREE SPACE: <Run Text="{Binding Path=SelectedItem.Storage, Mode=OneWay}" />
                </Span>
            </TextBlock>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,20,20,0">
                <Button Style="{StaticResource SimpleButtonStyle}">
                    <Image Source="Assets/minimize.png" Width="11" Height="11" />
                </Button>
                <Button Margin="15,0,0,0" Style="{StaticResource SimpleButtonStyle}">
                    <Image Source="Assets/maximize.png" Width="12" Height="11" />
                </Button>
                <Button Margin="15,0,0,0" Style="{StaticResource SimpleButtonStyle}">
                    <Image Source="Assets/close.png" Width="11" Height="11" />
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <ListView x:Name="ListLocal" Grid.Row="1" ItemsSource="{Binding LocalDrive}" Background="{x:Null}" BorderThickness="0" Padding="0"
                      MouseDoubleClick="LocalDriveList_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="File name" Width="500">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Margin="20,0,0,0" Foreground="#333333" FontSize="14" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Date modified" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Date}" Foreground="#333333" FontSize="12" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="File size" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Size}" Foreground="#333333" FontSize="12" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Transfer destination" Width="500">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Destination}" Foreground="#dc4323" FontSize="12" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
