<Window x:Class="FreeLeaf.View.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect via IP address" Width="320" SizeToContent="Height"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" UseLayoutRounding="True"
        ShowInTaskbar="False" FontFamily="../Assets/#Segoe WP" Background="WhiteSmoke">
    
    <Grid Margin="12">
        <StackPanel>
            <TextBlock Margin="0,0,0,6" Text="Enter your device IP address" FontSize="12" Foreground="#333333" />
            <TextBox x:Name="TextIPAddress" Margin="0,0,0,10" Text="192.168.0.101" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Padding="3" Width="70" Click="ButtonOK_Click" />
                <Button Content="Cancel" Margin="10,0,0,0" Padding="3" Width="70" Click="ButtonCancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
